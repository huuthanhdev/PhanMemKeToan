    <!-- popup -->
    <div class="form-popup--account" id="accountForm">
      <div class="bg-popup"></div>
      <form class="form-container" method="post">
        <h2>Hệ thống tài khoản kế toán</h2>
        <hr bg-dark>
        <div class="form-content">
          <!-- <div class="form-left"> -->
            <div class="accountId">
              <label for="accountId"><b>Mã tài khoản</b> <b style="color: red;">*</b></label>
              <input id="accountId" type="text" placeholder="Nhập mã tài khoản" name="accountId" required>
            </div>
            <div class="accountName">
              <label for="accountName"><b>Tên tài khoản</b> <b style="color: red;">*</b></label>
              <input id="accountName" type="text" placeholder="Nhập tên tài khoản" name="accountName" required>
            </div>
            <div class="accountLevel">
              <label for="accountLevel"><b>Cấp tài khoản</b></label>
              <select name="accountLevel" id="accountLevel" required>
                <option value="">--Lựa chọn cấp tài khoản--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
            </div>
        </div>
        
        <button type="submit" class="btn save">Lưu</button>
        <!-- <input type="submit" id="btnSave" value="Lưu"> -->
        <button type="button" class="btn close" onclick="closeForm()"><i class="fa-solid fa-close"></i></button>
        <button type="button" class="btn cancel" onclick="closeForm()">Hủy</i></button>
      </form>
    </div>
    <!-- //popup -->

    <script src="/account.js"></script>
    <script src="/app.js"></script>
    <script src="/bootstrap.min.js"></script>

</body>
